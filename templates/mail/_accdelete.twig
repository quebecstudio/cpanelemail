{% if currentUser.can('permEmailAcc') or currentUser.admin %}
{% block content %}

    <form action="" method="post" accept-charset="UTF-8">
        <input type="hidden" name="action" value="cpanelEmail/mailacc/delete">
        <input type="hidden" name="redirect" value="cpanelemail/mailacc">
        <input type="hidden" name="email" value="{{ email }}">

        <h2>{{ "Are you sure?"|t }}</h2>
        <p style="color:red">{{ "This cannot be undone!"|t }}</p>
        <br />

        <a href="/admin/cpanelemail/mailacc" class="btn">{{ "No, do not delete!"|t }}</a> <button class="btn submit" type="submit">{{ "Yes, delete!"|t }}</button>

    </form>



{% endblock %}

{% extends "cpanelemail/_layout" %}

{% set title = "Delete Email Account"|t~" : "~email %}

{% set selectedTab = 'mailacc' %}

{% else %}
{% redirect "/"~ craft.config.cpTrigger|default('admin') ~"/email" %}
{% endif %}
