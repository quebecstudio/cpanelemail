{% if currentUser.can('permEmailMsg') or currentUser.admin %}
{% set content %}


    <h2 class="right">{{ email }}</h2>
    <h1>{{ "Delete Auto Responder"|t }}</h1>
    <div class="clear"></div>
    <hr />


    <form action="" method="post" accept-charset="UTF-8">
      {{ getCsrfInput() }}
        <input type="hidden" name="action" value="cpanelEmail/mailmsg/delete">
        <input type="hidden" name="redirect" value="cpanelemail/mailmsg">
        <input type="hidden" name="email" value="{{ email }}">


        <h2>{{ "Are you sure?"|t }}</h2>
        <p style="color:red">{{ "This cannot be undone!"|t }}</p>
        <br />

        <a href="/{{ craft.config.cpTrigger|default('admin') }}/cpanelemail/mailmsg" class="btn">{{ "No, do not delete!"|t }}</a> <button class="btn submit" type="submit">{{ "Yes, delete!"|t }}</button>

    </form>



{% endset %}

{% extends "cpanelemail/_layout" %}

{% set title = "Auto Responders"|t %}

{% set selectedTab = 'mailmsg' %}

{% else %}
{% redirect "/"~ craft.config.cpTrigger|default('admin') ~"/email" %}
{% endif %}
